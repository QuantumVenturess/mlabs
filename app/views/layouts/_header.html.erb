<div class="logo">
	<%= link_to image_tag("/assets/logo_pain.png"), root_path %>
</div>
<% if signed_in? %>
	<ul class="headerNav">
		<li><%= link_to "Locations", locations_path %></li>
		<li><%= link_to "Jobs", jobs_path %></li>
		<li><%= link_to "Employees", employees_path %></li>
		<li><%= link_to "#{current_user.name.split(" ")[0]}", '#', class: "account" %></li>
	</ul>
	<div class="accountMenu">
		<ul>
			<li><%= link_to "All users", users_path %></li>
			<li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
			<li><%= link_to "Undo history", undos_path %></li>
			<li><%= link_to "System defaults", defaults_path %></li>
			<li><%= link_to "Sign out", signout_path %></li>
		</ul>
	</div>
<% end %>