<div class="employeeNew">
	<p class="employeeNewHeader">Edit Employee</p>
	<%= form_for @employee do |f| %>
		<div class="employeeNewForm">
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<p>Full Name</p>
				<%= f.text_field :name, autocomplete: "off" %>
			</div>
			<div class="field">
				<p>Employee Tier Level</p>
				<%= f.text_field :tier, autocomplete: "off" %>
			</div>
			<div class="field">
				<p>First Name</p>
				<%= f.text_field :first_name, autocomplete: "off" %>
			</div>
			<div class="field">
				<p>Last Name</p>
				<%= f.text_field :last_name, autocomplete: "off" %>
			</div>
			<div class="field">
				<p>Wet Team</p>
				<%= f.check_box :wones_team %>
			</div>
			<div class="field">
				<p>QNS Team</p>
				<%= f.check_box :qns_team %>
			</div>
			<div class="field">
				<p>Sarah's Team</p>
				<%= f.check_box :sarah_team %>
			</div>
			<div class="field">
				<p>Floater</p>
				<%= f.check_box :floater %>
			</div>
			<div class="action">
				<%= f.submit "Save" %>
				<%= link_to "Cancel", @employee %>
			</div>
		</div>
		<div class="employeeNewForm">
			<div class="field">
				<p>Station Number</p>
				<%= f.text_field :station, autocomplete: "off" %>
			</div>
			<div class="field">
				<p>Seat Number</p>
				<%= f.text_field :seat, autocomplete: "off" %>
			</div>
			<div class="field">
				<p>Must Assign</p>
				<%= f.text_field :must_assign, autocomplete: "off" %>
			</div>
			<div class="field">
				<p>On vacation?</p>
				<%= f.check_box :vacation %>
			</div>
			<div class="field">
				<p>Worked wet station?</p>
				<%= f.check_box :wet_worked %>
			</div>
			<div class="field">
				<p>Worked entry station?</p>
				<%= f.check_box :entry_worked %>
			</div>
			<div class="field">
				<p>Worked wet ones station?</p>
				<%= f.check_box :wones_worked %>
			</div>
			<div class="field">
				<p>Worked rejects station?</p>
				<%= f.check_box :qns_worked %>
			</div>
			<div class="field">
				<p>Worked Sarah's station?</p>
				<%= f.check_box :sarah_worked %>
			</div>
		</div>
	<% end %>
	<div class="clear"></div>
</div>